<==> input/_functions.scss
$twelve: 12;

@function plus($a, $b) {
  @return $a + $b;
}
@function subtract_all($first, $rest...) {
  @return $first - nth($rest, 1) - nth($rest, 2) - nth($rest, 3);
}

